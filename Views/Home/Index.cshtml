@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title> ClickPoll - Home </title>
</head>



<!-- Body Content-->
<body>

    <!-- Carousel of some featured causes -->
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators for carousel -->
        <ol class="carousel-indicators">
            <li data-target="carouselContainer" data-slide-to="0" class="active"></li>
            <li data-target="carouselContainer" data-slide-to="1"></li>
            <li data-target="carouselContainer" data-slide-to="2"></li>
            <li data-target="carouselContainer" data-slide-to="3"></li>
        </ol>

        <!-- Carousel content -->
        <div class="carousel-inner">
            <div class="carousel-item active" data-interval="10000">
                <img src="~/Content/images/hands.jpg" class="d-block w-100" height="500" width="500" alt="Featured Cause 0" />
                <div class="carousel-caption">
                    <h2>Welcome to ClickPoll!</h2>
                </div>
            </div>

            <div class="carousel-item" data-interval="10000">
                <img src="~/Content/images/earth.jpg" class="d-block w-100" height="500" width="500" alt="Featured Cause 1" />
                <div class="carousel-caption">
                    <h2>Make your voice heard</h2>
                    <p>Add your signature under a cause, or start your own!</p>
                </div>
            </div>

            <div class="carousel-item" data-interval="10000">
                <img src="~/Content/images/protest.jpg" class="d-block w-100" height="500" width="500" alt="Featured Cause 2" />
            </div>

            <div class="carousel-item" data-interval="10000">
                <img src="~/Content/images/group.jpg" class="d-block w-100" height="500" width="500" alt="Featured Cause 3" />
            </div>
        </div>

        <!-- Carousel control indicators -->
        <a class="carousel-control-prev" href="#carouselContainer" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselContainer" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div> <!-- End of carousel -->
</body>
</html>
